{
  "name": "Top Companies",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Top Companies along with their hiring and firing",
  "homepage_url": "http://google.com",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "sites changes",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    "inject.js"
   
  ]
}